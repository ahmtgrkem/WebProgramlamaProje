@{
    ViewData["Title"] = "Yapay Zeka Antrenörü";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center mb-5">
            <h1 class="display-4 fw-bold text-primary">Yapay Zeka Antrenörü</h1>
            <p class="lead text-muted">Boydan bir fotoğrafınızı yükleyin, yapay zeka vücut tipinizi analiz etsin ve size özel bir antrenman programı oluştursun.</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <form asp-action="AnalyzePhysique" method="post" enctype="multipart/form-data" id="analysisForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-4 text-center">
                            <div class="upload-icon mb-3">
                                <i class="bi bi-cloud-upload display-1 text-secondary"></i>
                            </div>
                            <label for="imageFile" class="form-label fw-bold">Fotoğrafınızı Yükleyin</label>
                            <input type="file" class="form-control" id="imageFile" name="imageFile" accept="image/*" required>
                            <div class="form-text">Desteklenen formatlar: JPG, PNG, WEBP. Maksimum boyut: 5MB.</div>
                        </div>

                        <div class="mb-4">
                            <label for="userNotes" class="form-label">Ek Notlar (İsteğe Bağlı)</label>
                            <textarea class="form-control" id="userNotes" name="userNotes" rows="3" placeholder="Örn: Dizimde sakatlık var, karın kaslarına odaklanmak istiyorum..."></textarea>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg py-3" id="submitBtn">
                                <i class="bi bi-magic me-2"></i> Analizi Başlat
                            </button>
                        </div>
                    </form>

                    <!-- Loading Spinner (Hidden by default) -->
                    <div id="loadingSection" class="text-center mt-4 d-none">
                        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                            <span class="visually-hidden">Yükleniyor...</span>
                        </div>
                        <h5 class="mt-3 text-primary">Yapay Zeka Fotoğrafınızı Analiz Ediyor...</h5>
                        <p class="text-muted">Bu işlem birkaç saniye sürebilir.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('analysisForm').addEventListener('submit', function() {
            // Hide form content or disable button
            document.getElementById('submitBtn').disabled = true;
            document.getElementById('submitBtn').innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Processing...';
            
            // Show loading section
            document.getElementById('loadingSection').classList.remove('d-none');
        });
    </script>
}
