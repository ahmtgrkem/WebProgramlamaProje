@model WebProgramlamaProje.ViewModels.AIResultViewModel

@{
    ViewData["Title"] = "Analiz Sonucu";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-stars me-2"></i>Yapay Zeka Analiz Sonucu</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Yeni Analiz
        </a>
    </div>

    <div class="row">
        <!-- Sol Taraf: Antrenman Programı (Text) -->
        <div class="col-lg-7 mb-4">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-file-text me-2"></i>Antrenman ve Beslenme Programı</h4>
                </div>
                <div class="card-body p-4">
                    <div class="markdown-content">
                        <pre style="white-space: pre-wrap; font-family: inherit; font-size: 1rem; line-height: 1.6;">@Model.AnalysisResult</pre>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sağ Taraf: Görselleştirme -->
        <div class="col-lg-5 mb-4">
            <!-- Yüklenen Resim -->
            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-bounding-box me-2"></i>Mevcut Durum</h5>
                </div>
                <div class="card-body text-center p-3">
                    <img src="@Model.UploadedImageBase64" class="img-fluid rounded" alt="Uploaded Image" style="max-height: 300px;" />
                </div>
            </div>

            <!-- Üretilen Resim (Hedef) -->
            @if (!string.IsNullOrEmpty(Model.GeneratedImageBase64))
            {
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0"><i class="bi bi-magic me-2"></i>6 Ay Sonraki Potansiyel</h4>
                    </div>
                    <div class="card-body text-center p-4">
                        <img src="@Model.GeneratedImageBase64" class="img-fluid rounded shadow" alt="AI Generated Future Self" />
                        <p class="mt-3 text-muted small">Yapay zeka tarafından oluşturulan tahmini hedef görünüm.</p>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i> Hedef görsel oluşturulamadı.
                </div>
            }
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 bg-light">
                <div class="card-body text-center">
                    <p class="mb-0 text-muted small">
                        <i class="bi bi-info-circle me-1"></i>
                        Yasal Uyarı: Bu bir yapay zeka önerisidir. Yeni bir antrenman programına başlamadan önce lütfen profesyonel bir eğitmene danışın.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
