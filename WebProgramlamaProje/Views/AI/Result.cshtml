@model string

@{
    ViewData["Title"] = "Analiz Sonucu";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-primary"><i class="bi bi-stars me-2"></i>Yapay Zeka Analiz Sonucu</h2>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Yeni Analiz
                </a>
            </div>

            @if (ViewBag.GeneratedImage != null)
            {
                <div class="card shadow-lg border-0 mb-4">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0"><i class="bi bi-magic me-2"></i>6 Ay Sonraki Potansiyel Görünümünüz</h4>
                    </div>
                    <div class="card-body text-center p-4">
                        <img src="data:image/jpeg;base64,@ViewBag.GeneratedImage" class="img-fluid rounded shadow" alt="AI Generated Future Self" style="max-height: 500px;" />
                        <p class="mt-3 text-muted">Yapay zeka tarafından oluşturulan tahmini görünüm.</p>
                    </div>
                </div>
            }

            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="markdown-content">
                        @* 
                           Displaying raw text for now. 
                           In a production environment, you would use a library like Markdig 
                           to render this HTML safely: @Html.Raw(Markdig.Markdown.ToHtml(Model))
                        *@
                        <pre style="white-space: pre-wrap; font-family: inherit; font-size: 1.1rem; line-height: 1.6;">@Model</pre>
                    </div>
                </div>
                <div class="card-footer bg-light p-4 text-center">
                    <p class="mb-0 text-muted small">
                        <i class="bi bi-info-circle me-1"></i>
                        Yasal Uyarı: Bu bir yapay zeka önerisidir. Yeni bir antrenman programına başlamadan önce lütfen profesyonel bir eğitmene danışın.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
