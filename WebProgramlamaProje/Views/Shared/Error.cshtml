@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle text-warning display-1"></i>
                    </div>
                    <h1 class="display-5 fw-bold text-danger mb-3">Üzgünüz, Bir Hata Oluştu!</h1>
                    <p class="lead text-muted mb-4">
                        İşleminiz sırasında beklenmedik bir sorunla karşılaştık. Teknik ekibimiz durumdan haberdar edildi.
                    </p>
                    
                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-light border d-inline-block text-start mb-4">
                            <small class="text-muted d-block">Hata Takip Kodu (Request ID):</small>
                            <code class="fw-bold">@Model.RequestId</code>
                        </div>
                    }

                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-4 gap-3">
                            <i class="bi bi-house-door me-2"></i>Ana Sayfaya Dön
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="bi bi-arrow-left me-2"></i>Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
