@model IEnumerable<WebProgramlamaProje.Models.Service>

@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <span class="badge bg-primary bg-opacity-10 text-primary mb-2 px-3 py-2 rounded-pill">Neler Sunuyoruz?</span>
        <h1 class="display-4 fw-bold mb-3">Hizmetlerimiz</h1>
        <p class="lead text-muted mx-auto" style="max-width: 600px;">
            Size en uygun spor ve sağlık hizmetlerini keşfedin. Uzman eğitmenlerimiz eşliğinde hedeflerinize ulaşın.
        </p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <div class="card-body d-flex flex-column p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title fw-bold text-dark mb-0 fs-4">@item.Name</h5>
                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill fs-6 px-3">@item.Price.ToString("C0")</span>
                        </div>
                        
                        <h6 class="card-subtitle mb-3 text-muted d-flex align-items-center">
                            <i class="bi bi-geo-alt-fill me-2 text-primary"></i>@item.Gym?.Name
                        </h6>

                        <p class="card-text text-secondary flex-grow-1">
                            @(item.Description?.Length > 120 
                                ? item.Description.Substring(0, 117) + "..." 
                                : item.Description)
                        </p>

                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            <small class="text-muted fw-bold">
                                <i class="bi bi-clock-history me-1"></i>@item.DurationMinutes dk
                            </small>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm stretched-link fw-bold px-3">
                                İncele <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
        transition: transform 0.2s ease-in-out;
    }
    .hover-card:hover {
        transform: translateY(-5px);
    }
</style>
