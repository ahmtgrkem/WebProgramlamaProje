@model IEnumerable<WebProgramlamaProje.Models.Service>

@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Hizmetlerimiz</h1>
        <p class="lead text-muted">Size en uygun spor ve sağlık hizmetlerini keşfedin.</p>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title fw-bold text-primary mb-0">@item.Name</h5>
                            <span class="badge bg-success rounded-pill">@item.Price.ToString("C2")</span>
                        </div>
                        
                        <h6 class="card-subtitle mb-3 text-muted">
                            <i class="bi bi-geo-alt-fill me-1"></i>@item.Gym?.Name
                        </h6>

                        <p class="card-text text-muted flex-grow-1">
                            @(item.Description?.Length > 100 
                                ? item.Description.Substring(0, 97) + "..." 
                                : item.Description)
                        </p>

                        <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                            <small class="text-muted">
                                <i class="bi bi-clock me-1"></i>@item.DurationMinutes dk
                            </small>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm stretched-link">
                                Detaylar <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s ease-in-out;
    }
    .hover-card:hover {
        transform: translateY(-5px);
    }
</style>
