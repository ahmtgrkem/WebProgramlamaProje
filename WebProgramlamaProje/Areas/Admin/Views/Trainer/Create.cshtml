@model WebProgramlamaProje.Models.Trainer

@{
    ViewData["Title"] = "Yeni Eğitmen Ekle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Yeni Eğitmen Ekle</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label">Ad</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label">Soyad</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Specialization" class="form-label">Uzmanlık Alanı</label>
                        <input asp-for="Specialization" class="form-control" />
                        <span asp-validation-for="Specialization" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AvailabilityDescription" class="form-label">Müsaitlik Açıklaması</label>
                        <textarea asp-for="AvailabilityDescription" class="form-control" rows="2" placeholder="Örn: Hafta içi 09:00 - 17:00"></textarea>
                        <span asp-validation-for="AvailabilityDescription" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input class="form-check-input" type="checkbox" asp-for="IsAvailable" />
                        <label class="form-check-label" asp-for="IsAvailable">
                            Şu an Müsait (Randevu alımına açık)
                        </label>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">İptal</a>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
