@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Yönetim Paneli Özeti</h1>

    <div class="row">
        <!-- Toplam Üye -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Toplam Üye</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalUsers</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-people-fill fa-2x text-gray-300" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Toplam Eğitmen -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Eğitmen Sayısı</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalTrainers</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-person-badge-fill fa-2x text-gray-300" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Toplam Hizmet -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Hizmetler
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalServices</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-activity fa-2x text-gray-300" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bekleyen Randevular -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Bekleyen Randevular</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.PendingAppointments</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-calendar-check fa-2x text-gray-300" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Hızlı İşlemler</h6>
                </div>
                <div class="card-body">
                    <a asp-controller="Trainer" asp-action="Create" class="btn btn-primary btn-icon-split mb-2 w-100 text-start">
                        <span class="icon text-white-50">
                            <i class="bi bi-plus-lg"></i>
                        </span>
                        <span class="text">Yeni Eğitmen Ekle</span>
                    </a>
                    <a asp-controller="Service" asp-action="Create" class="btn btn-success btn-icon-split mb-2 w-100 text-start">
                        <span class="icon text-white-50">
                            <i class="bi bi-plus-lg"></i>
                        </span>
                        <span class="text">Yeni Hizmet Ekle</span>
                    </a>
                    <a asp-controller="Gym" asp-action="Create" class="btn btn-info btn-icon-split w-100 text-start">
                        <span class="icon text-white-50">
                            <i class="bi bi-plus-lg"></i>
                        </span>
                        <span class="text">Yeni Spor Salonu Ekle</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
